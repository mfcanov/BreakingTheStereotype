#include <iostream>


using namespace std;


int d,r,n,n2,p,d2;

int main(){
    
    cout<<"This is a program that will give you the multiplication,division,addition,substraction "<<endl;
    cout<<"Tell me the first number: ";
    cin>>n;
    cout<<"Tell me the second number: ";
    cin>>n2;
    
    d=(n)/(n2);
    d2=(n)-(n2);
    p=(n)*(n2);
    r=n%n2;
    
    
    cout<<"The product is: "<< p << endl;
    cout<<"The integer division is: "<< d <<endl;
    cout<<"The difference is: "<<d2<<endl;
    cout<<"The reimainder is:  "<< r <<endl;
    
    
}
